@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Forms</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    
</head>

<body>
    <section class="vh-auto bg-image" style="background: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp')center;">


                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-4">
                                <input asp-for="Input.RollNumber" class="form-control form-control-lg" />
                                <label asp-for="Input.RollNumber" class="form-label" aria-required="true">RollNumber</label>
                                <span asp-validation-for="Input.RollNumber" class="text-danger"></span>
                            </div>
                                   

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control form-control-lg"/>
                                <label asp-for="Input.Email" class="form-label" autocomplete="username" aria-required="true">Email address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class=" form-floating mb-4">
                                <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" />
                                <label asp-for="Input.PhoneNumber" class="form-label" autocomplete="username" aria-required="true">Enter Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                        

                            <div class=" form-floating mb-4">
                                <input asp-for="Input.Password" class="form-control form-control-lg" />
                                <label asp-for="Input.Password" class="form-label" autocomplete="username" aria-required="true">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class=" form-floating mb-4">
                                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" />
                                <label asp-for="Input.ConfirmPassword" class="form-label" autocomplete="username" aria-required="true">Repeat your password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>


    

                                    <div class="d-grid">
                                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-block gradient-custom-4 text-body">Register</button>
                                        </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            
    </section>

    <div class="col-md-6 col-md-offset-2">
        <section>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}