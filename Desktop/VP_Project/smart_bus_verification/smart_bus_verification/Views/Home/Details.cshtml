@model smart_bus_verification.Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h1>Student Details</h1>

<div>
    <hr />
    <button style="margin-left:10%;">
        <a asp-action="List">Back to List</a>
    </button>
        <dl class="row" style="padding-left:40%;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Roll)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roll)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CNIC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CNIC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RouteNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PickUp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PickUp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.image)
        </dt>
        <dd class = "col-sm-10">
            <div style="width: 100px; height: 100px; overflow: hidden;">
                <img src="~/images/@Html.DisplayFor(model => model.image)" style="width: 100%; height: 100%; object-fit: cover; object-position: center center; " alt="Image" />
            </div>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voucherimage)
        </dt>
        <dd class="col-sm-10">
            <div style="width: 100px; height: 100px; overflow: hidden;">
                <img src="~/images/@Html.DisplayFor(model => model.Voucherimage)" style="width: 100%; height: 100%; object-fit: cover; object-position: center center; " alt="Image" />
            </div>
        </dd>

      

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>
    </dl>
</div>
<div style="padding-left:40%;">
    <button style="text-decoration:none;">
    <a asp-action="Edit" asp-route-id="@Model?.StudentId">Edit</a>
    </button>
</div>
